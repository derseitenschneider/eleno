<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Morntag Custom PHPCS Rules">
    <description>Morntag rules for PHP_CodeSniffer (Modern PSR-12 with Method Comments)</description>

    <exclude-pattern>/vendor/*</exclude-pattern>

    <rule ref="PSR12"/>

    <arg name="tab-width" value="4"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <rule ref="Squiz.Commenting.FileComment.Missing">
        <severity>5</severity>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <severity>5</severity>
    </rule>

    <!-- <rule ref="Squiz.Commenting.ClassComment.Missing"> -->
    <!--     <severity>5</severity> -->
    <!-- </rule> -->

    <rule ref="Squiz.PHP.CommentedOutCode.Found">
        <severity>10</severity>
    </rule>


    <rule ref="Squiz.Commenting.FunctionComment.MissingParamComment">
        <severity>5</severity>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment">
        <severity>5</severity>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment.MissingReturn">
        <severity>5</severity>
    </rule>

    <rule ref="Squiz.Commenting.FunctionComment.IncorrectParamVarName">
        <severity>5</severity>
    </rule>

</ruleset>
