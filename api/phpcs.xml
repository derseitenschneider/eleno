<?xml version="1.0"?>
<ruleset name="CustomStandard">
    <description>Custom coding standard to exclude file comment error</description>

    <!-- Include the PEAR standard -->
    <rule ref="PEAR">
        <!-- Exclude the rule for missing file comment -->
        <exclude name="PEAR.Commenting.FileComment.Missing"/>
    </rule>

    <!-- You can include other standards or rules here if needed -->
    <!-- <rule ref="PSR2"/> -->

    <!-- Define your source files or directories -->
    <file>src</file>
    <file>tests</file>

    <!-- You can exclude specific files or directories if needed -->
    <!-- <exclude-pattern>*/vendor/*</exclude-pattern> -->
</ruleset>
