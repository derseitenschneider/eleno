<?xml version="1.0"?>
<ruleset name="CustomStandard">
  <description>Custom coding standard to exclude specific comment errors</description>
  <!-- Include the PEAR standard -->
  <rule ref="PEAR">
    <exclude name="PEAR.Commenting.FileComment"/>
    <exclude name="PEAR.Commenting.ClassComment"/>
    <exclude name="PEAR.Commenting.FunctionComment"/>
    <exclude name="PEAR.Commenting.ClassComment.Missing"/>
    <exclude name="PEAR.Commenting.InlineComment"/>
    <exclude name="PEAR.Commenting.BlockComment"/>
  </rule>

  <rule ref="PEAR.Commenting.FileComment">
    <severity>0</severity>
  </rule>

  <rule ref="PEAR.Commenting.ClassComment">
    <severity>0</severity>
  </rule>

  <rule ref="PEAR.Commenting.FunctionComment">
    <severity>0</severity>
  </rule>

  <rule ref="PEAR.Commenting.ClassComment.Missing">
    <severity>0</severity>
  </rule>

  <rule ref="Generic.Commenting.DocComment">
    <severity>0</severity>
  </rule>
  <rule ref="PEAR.Commenting.BlockComment">
    <severity>0</severity>
  </rule>
  <rule ref="PEAR.Commenting.InlineComment">
    <severity>0</severity>
  </rule>
  <rule ref="Generic.Commenting.DocComment.MissingShort">
    <severity>0</severity>
  </rule>

  <rule ref="Generic.Commenting.DocComment.SpacingBeforeTags">
      <severity>0</severity>
  </rule>

  <rule ref="Squiz.Commenting.DocCommentAlignment">
      <severity>0</severity>
  </rule>


  <file>src</file>
  <file>tests</file>

  <exclude-pattern>*/api/vendor/*</exclude-pattern>
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern type="relative">^vendor/.*$</exclude-pattern>
  <exclude-pattern>/vendor/</exclude-pattern>
  <exclude-pattern>*/vendor/</exclude-pattern>
  <exclude-pattern>./vendor/*</exclude-pattern>

  <arg name="ignore" value="vendor"/>
  <arg name="basepath" value="."/>
</ruleset>
