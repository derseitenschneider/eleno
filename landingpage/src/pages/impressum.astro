---
import PageLayout from '../components/layouts/PageLayout.astro';

import PrivacyPolicy from '../../../app/src/components/privacyPolicy/PrivacyPolicy.component';
---

<PageLayout>
  <main>
    <div class="section">
      <h1 class="heading-primary">Impressum & Datenschutz</h1>
      <PrivacyPolicy />
    </div>
  </main>
</PageLayout>

<style>
  .section {
    padding: 4rem 2rem;
    margin: 0 auto;
    max-width: 95rem;

    .heading-primary {
      margin-bottom: 3.2rem;
    }
  }

  @media (max-width: 680px) {
    .section {
      .heading-primary {
        max-width: 66%;
      }
    }
  }
</style>
