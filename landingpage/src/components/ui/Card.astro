---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="card">
  <div class="card__icon">
    <slot />
  </div>
  <h5 class="card__title">{title}</h5>
  <p class="card__text">
    {text}
  </p>
</div>

<style lang="scss">
  .card {
    display: flex;
    flex-direction: column;
    width: 30rem;
    height: 40rem;
    align-items: center;
    gap: 1.6rem;
    border-radius: 8px;
    background-color: hsla(195, 42%, 48%, 0.05);
    padding: 20px;
    text-align: center;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    &__icon {
      height: 6rem;
    }
    &__title {
      font-size: 2.8rem;
      font-weight: 400;
    }
    &__text {
      font-size: 1.8rem;
    }
  }
</style>
