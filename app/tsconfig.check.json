{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@supabase/gotrue-js": ["./src/types/supabase-gotrue-stub.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests/**/*",
    "playwright/**/*"
  ]
}
