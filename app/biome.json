{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "css": {
    "formatter": {
      "enabled": false
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "lineWidth": 80,
      "indentWidth": 2
    }
  },
  "files": {
    "ignore": [
      "coverage",
      "playwright-report",
      "test-results",
      "node_modules",
      "supabase/functions",
      "src/scss/tailwind.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "warn"
      }
    }
  },
  "overrides": [
    {
      "include": ["tests/**/*", "src/test/**/*", "**/*.test.*", "**/*.spec.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
